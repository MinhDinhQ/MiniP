@inherits LayoutComponentBase
@using kreddit_app.Data
@using shared.Model
@inject ApiService apiService

@if (posts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Votes</th>
            <th>Actions</th>
        </tr>
        @foreach (var post in posts)
        {
            <tr>
                <!-- These a href links will match the route in the page 'PostItem.razor'. -->
                <td><a href="/post/@post.Id">@post.Title</a></td>
                <td>@post.Content</td>
                <td>@(post.Upvotes - post.Downvotes)</td>
                <td>
                    <button @onclick="() => Upvote(post.Id)">Upvote</button>
                    <button @onclick="() => Downvote(post.Id)">Downvote</button>
                </td>
            </tr>
        }
    </table>

    <br/>
}

@code {
    private Post[]? posts;

    protected override async Task OnInitializedAsync()
    {
        posts = await apiService.GetPosts();
    }

    private async void Upvote(int id)
    {
        // Opdater posten med upvote
        var updatedPost = await apiService.UpvotePost(id);
        
        // Opdater den specifikke post i posts arrayet
        var post = posts?.FirstOrDefault(p => p.Id == id);
        if (post != null)
        {
            post.Upvotes = updatedPost.Upvotes; // Opdater upvotes
        }
    }

    private async void Downvote(int id)
    {
        // Implementer nedstemning her (skal bruge en metode fra APIService)
        Console.WriteLine("Downvote feature is not implemented yet.");
    }
}
